<h2 class="text-center">New Group:</h2>
<br>
<div class="container">
    <form method='POST' class="form-horizontal" id="submit_form">
        <div class='form-group'>
            <label class="col-sm-3 control-label">Name: </label>
            <div class="col-sm-7">
                <input type="text" name="group" id="group" placeholder="name your group" class='form-control' autofocus required/>
            </div>
        </div>
        <div class='form-group'>
            <label class="col-sm-3 control-label">League: </label>
            <div class="col-sm-7">
                <select type="text" name="league_selector" id="league_selector" class='form-control'>
                    <option selected disabled>choose a league</option>
                    {{#each leagueCaption}}
                    <option>
                        {{caption}} ({{leagueCode}})
                    </option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class='form-group'>
            <label class="col-sm-3 control-label">Team: </label>
            <div class="col-sm-7">
                <select type="text" name="team_selector" id="team_selector" value="" class='form-control'>
                    <option selected disabled>choose a team</option>
                </select>
            </div>
        </div>
        <div class='form-group'>
            <label class="col-sm-3 control-label">Selected Teams: </label>
            <div class="col-sm-7">
                <input class="form-control"type="text" name="selected_teams" id="selected_teams" value="">
                <br>
                <button class="btn btn-success btn-add" type="button">
                    <span class="glyphicon glyphicon-plus"></span>
                </button>
                <button class="btn btn-danger btn-remove" type="button">
                    <span class="glyphicon glyphicon-minus"></span>
                </button>
                <small>Press <span class="glyphicon glyphicon-plus gs"></span>
                  to add this team or <span class="glyphicon glyphicon-minus gs"></span>
                  to remove all
                </small>
            </div>
        </div>
        <br>
        <div class='form-group'>
            <label class="col-sm-3 control-label"></label>
            <div class="col-sm-7">
                <input type="submit" id="btSubmit" class='btn btn-primary' />
            </div>
        </div>
    </form>
</div>
